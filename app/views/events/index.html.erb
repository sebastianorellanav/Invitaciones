<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row my-4 py-4 mb-1">
    <div class="col-sm-12 d-flex justify-content-center">
      <h1 class="text-center display-2">Eventos</h1>.
    </div>
  </div>

  <div class="row mx-5">
    <div class="col-sm-11 d-flex justify-content-end">
      <%= link_to "Crear Evento", new_event_path, class: "btn btn-success" %>

    </div>
  </div>

  <div class="row my-4 py-4 justify-content-center">
    <div class="col-sm-9 d-flex justify-content-center">
      <table class="table table-striped table-hover center">
        <thead>
          <tr class="table-dark">
            <th>Nombre del evento</th>
            <th>Fecha</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>

              <td><%= event.name %></td>
              <td><%= event.date %></td>
              <td>
                <div class="d-flex align-items-center">
                  <%= link_to "Ver Evento", event, class: "btn btn-outline-primary mx-1" %>
                  <%= button_to "Eliminar",
                  event,
                  method: :delete,
                  class: "btn btn-outline-danger mx-1" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>

</div>
