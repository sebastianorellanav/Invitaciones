<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row my-4 py-4 mb-1 pb-2">
    <div class="col-sm-12 d-flex justify-content-center">
      <h1 class="text-center display-2"><p class="fw-bold"><%= @event.name %></h1></p>
    </div>
  </div>

  <div class="row my-3 py-4 justify-content-center">
    <div class="col-sm-12 d-flex justify-content-center">
      <div class="card w-75">
        <div class="card-header">
          Descripción del evento
        </div>
        <div class="card-body">
        <div class="card-body text-dark">
          <p class="card-text fw-bold">
            Fecha: <%= @event.date %>
          </p>
          <div class="trix-content my-3">
            <%= @event.description %>
          </div>
          <%= link_to "Crear Invitación", new_user_event_path, class: "btn btn-success my-2" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3 pt-3 mb-4">
    <div class="col-sm-12 d-flex justify-content-center">
      <%= link_to "Volver", events_path %>
    </div>
  </div>

    

</div>




