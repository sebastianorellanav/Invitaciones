<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row my-4 py-4 mb-1">
    <div class="col-sm-12 d-flex justify-content-center">
      <h1 class="text-center display-2">Invitaciones Enviadas</h1>.
    </div>
  </div>

    <div class="row mx-5">
      <div class="col-sm-12 d-flex justify-content-end">
          <%= link_to "Crear Invitación", new_user_event_path, class: "btn btn-success"%>

      </div>
    </div>

  <div class="row my-4 py-4">
    <div class="col-sm-12 d-flex justify-content-center">
      <table class="table table-striped table-hover">
        <thead>
          <tr class="table-dark">
            <th>Nombre del evento</th>
            <th>Invitado</th>
            <th>Estado de la Invitación</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @user_events.each do |user_event| %>
            <tr>
              
              <td><%= user_event.event.name %></td>
              <td><%= user_event.user.email %></td>
              <td><%= user_event.state %></td>
              <td>
                <div class="d-flex align-items-center">
                <%= link_to "Ver Invitación", user_event, class:"btn btn-outline-primary mx-1" %>
                <%= button_to "Eliminar", user_event, method: :delete, class:"btn btn-outline-danger mx-1"%>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
    <br>



  </div>
